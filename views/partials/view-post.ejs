<!-- Insert data of a full post -->
<!-- Include the location, author, image and travel experience -->
<div class="ui segment padded">
  <h1 class="ui center aligned header"><%= location %></h1>
  <div class="ui centered grid">
    <div class="row">
      <p>By: <%= author %></p>
    </div>
    <!-- Conditionally render the edit and delete buttons if the user is the author -->
    <%if (authorId === userId) { %>
    <a href="/posts/edit/post/<%=id%>"
      ><button class="ui button">
        Edit Post
      </button></a
    >

    <button postId="<%=id%>" id="delete-btn" class="ui red button">
      Delete Post
    </button>
    <% } %>
  </div>
  <div class="ui grid">
    <div class="row">
      <div class="column">
        <%if (imageURL) { %>
        <img
          class="ui large floated right image"
          src="<%=imageURL%>"
          alt="Travel Image"
        />
        <% } %> <%if (!imageURL) { %>
        <img
          class="ui large floated right image"
          src="/assets/default.png"
          alt="Travel Image"
        />
        <% } %>
        <div class="description">
          <%= travelExperience %>
        </div>
      </div>
    </div>
  </div>
</div>
